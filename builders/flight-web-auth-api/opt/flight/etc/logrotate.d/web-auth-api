/opt/flight/var/log/web-auth-api/*.log {
    daily
    missingok
    rotate 7
    compress
    delaycompress
    notifempty
    create 640 nobody adm
    sharedscripts
      postrotate
      [ -f /opt/flight/var/run/service/web-auth-api.pid ] && kill -s HUP `cat /opt/flight/var/run/service/web-auth-api.pid`
    endscript
}
