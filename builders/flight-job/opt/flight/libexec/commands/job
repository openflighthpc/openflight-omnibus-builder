flight_ROOT=${flight_ROOT:-"$( cd "$( dirname "${BASH_SOURCE[0]}" )/../.." &> /dev/null && pwd )"}
export RUBYOPT='-W0'
export FLIGHT_CWD=$(pwd)
cd /opt/flight/opt/job
export FLIGHT_PROGRAM_NAME="${flight_NAME} $(basename $0)"
"$flight_ROOT"/bin/flexec bundle exec bin/job "$@"
