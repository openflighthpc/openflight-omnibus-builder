# Rotate Flight WWW logs
/opt/flight/var/log/job-script-api/*.log {
    daily
    missingok
    rotate 7
    compress
    delaycompress
    notifempty
    create 640 nobody adm
    sharedscripts
      postrotate
      [ -f /opt/flight/var/run/service/job-script-api.pid ] && kill -s HUP `cat /opt/flight/var/run/service/job-script-api.pid`
    endscript
}
