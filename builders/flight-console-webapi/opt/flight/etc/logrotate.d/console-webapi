# Rotate Flight Console API logs
/opt/flight/var/log/console-webapi/*.log {
    daily
    missingok
    rotate 7
    compress
    delaycompress
    notifempty
    create 640 nobody adm
    sharedscripts
      postrotate
      [ -f /opt/flight/var/run/console-webapi.pid ] && /opt/flight/bin/flight service restart console-webapi
    endscript
}
