export FLIGHT_CWD=$(pwd)
cd /opt/flight/opt/nodeattr-server
export FLIGHT_PROGRAM_NAME="${flight_NAME} $(basename $0)"
if [[ $# != 0 ]] ; then
    if ! [[ $1 =~ ^[0-9]+$ ]] ; then
        echo "$1 is not a valid number of days for token to be valid"
        echo "Not generating token."
        exit 1
    else
        EXPIRE="[$1]"
    fi
fi
export RACK_ENV=production
set -a
source /opt/flight/etc/nodeattr-server.conf
set +a
flexec bundle exec bin/rake token:user$EXPIRE
